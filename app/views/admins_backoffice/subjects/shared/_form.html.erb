<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
</div>

<div class="row">
    <% if @subject.errors.any? %>
        <div class="card mb-4 py-3 border-left-danger">
            <div class="card-body">
                <ul>
                    <% @subject.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= "#{action_message} Assunto/Área"%>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
                            <div class="form-group">
                                <%= form.label :description%>
                                <%= form.text_field :description, class:"form-control", placeholder:"Descrição do Assunto/Área" %>
                            </div>
                            <button type="submit" class="btn btn-light btn-icon-split"><span class="icon text-gray-600"><i class="fas fa-arrow-right"></i></span><span class="text">Salvar</span></button>
                        <% end  %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>