<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listando Assuntos/Áreas</h1>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Assuntos/Áreas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4"><div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"></label></div></div></div><div class="row"><div class="col-sm-12"><table class="table table-bordered dataTable" id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%;" width="100%" cellspacing="0">
                <thead>
                    <tr role="row">
                        <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 165px;" aria-sort="ascending" aria-label="ID: activate to sort column descending">ID</th>
                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 253px;" aria-label="Email: activate to sort column ascending"><%= translate_attribute(@subjects, :description) %></th>
                        <th>
                        <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do %>
                            <i class="fas fa-plus"></i>
                        <% end %>
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% @subjects.each do |subject| %>
                    <tr class="odd">
                        <td><%= subject.id %></td>
                        <td><%= subject.description %></td>
                        <td style="width: 100px">
                            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-info btn-circle" do %>
                                <i class="fas fa-edit"></i>
                            <% end %>
                            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm_with', item: subject.description.truncate(15) )} do %>
                                <i class="fas fa-minus"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
            <div class="text-center">
                <%= paginate @subjects%>
            </div>
        </div>
    </div>
</div>