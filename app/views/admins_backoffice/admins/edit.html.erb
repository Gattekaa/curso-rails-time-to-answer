<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Editando</h1>
    </div>
</div>

<div class="row">
    <% if @admin.errors.any? %>
        <div class="card mb-4 py-3 border-left-danger">
            <div class="card-body">
                <ul>
                    <% @admin.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Editando Administrador
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
                            <div class="form-group">
                                <%= form.label :email%>
                                <%= form.text_field :email, class:"form-control", placeholder:"Email do administrador" %>
                            </div>
                             <div class="form-group">
                                <%= form.label :password %>
                                <%= form.text_field :password, class:"form-control", type:"password", placeholder:"Senha" %>
                            </div>
                             <div class="form-group">
                                <%= form.label :password_confirmation %>
                                <%= form.text_field :password_confirmation, class:"form-control", type:"password", placeholder:"Digite sua senha novamente" %>
                            </div>
                            <button type="submit" class="btn btn-light btn-icon-split"><span class="icon text-gray-600"><i class="fas fa-arrow-right"></i></span><span class="text">Salvar</span></button>
                        <% end  %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>