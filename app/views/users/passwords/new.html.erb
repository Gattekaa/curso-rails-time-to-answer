    <div>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <h1>Esqueceu a senha?</h1>
              <div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail" %>
              </div>
              <div>
                <%= f.submit "Enviar instruções para resetar a senha", class: "btn btn-default submit" %>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <%= render "users/shared/links", class: "to_register" %>

                <div class="clearfix"></div>
                <br />

                <div>
                  <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                  <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 4 template. Privacy and Terms</p>
                </div>
              </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>

